@model TaskManagement.Models.Project
@{ ViewBag.Title = "Nou proiect"; }

<h2>Formular adaugare proiect nou</h2>
@Html.ValidationSummary(false, "", new { @class = "text-danger" })

<form method="post" action="/Project/New">
    @Html.Label("Name", "Nume proiect")
    <br />
    @Html.TextBox("Name", null, new { @class = "form-control" })
    <br />
    <button class="btn btn-success" type="submit">Adauga proiect</button>
</form>

@{ ViewBag.Title = "Nou task"; }

<h2>Formular adaugare task nou</h2>
@Html.ValidationSummary(false, "", new { @class = "text-danger" })

<form method="post" action="/Task/New">
 
    <input type="hidden" name="ProjectId" value="@ViewBag.projectId" />
    <label>Nume</label>
    <br />
    <input type="text" name="Title" />
    <input type="hidden" name="Status" value="Not started" />
    <br />
    <br />
    <label>Data</label>
    <br />
    <input type="hidden" name="StartDate" value="@DateTime.Now.ToString()" />
    <input type="date" class="form-control" name="DueDate" />
    <br />
    <button type="submit">Adauga task</button>
</form>